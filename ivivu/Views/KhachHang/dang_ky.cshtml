@model ivivu.Models.KhachHang

@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DangKy</h2>
<div>
    <form id="form-dang-nhap" action="/KhachHang/post_dang_ky" method="post">
        <div>
            <label>Ho va Ten: </label>
            <input type="text" name="Model.hoTen" id="hoTen"/>        
        </div>
        <div>
            <label>Ten dang nhap: </label>
            <input type="text" name="Model.tenDangNhap" id="tenDangNhap"/>        
        </div>
        <div>
            <label>Mat Khau: </label>
            <input type="password" name="Model.matKhau" id="matKhau"/>        
        </div>
        <div>
            <label>So CMND: </label>
            <input type="text" name="Model.soCMND" id="soCMND"/>        
        </div>
        <div>
            <label>So Dien Thoai: </label>
            <input type="text" name="Model.soDienThoai" id="soDienThoai"/>        
        </div>
        <div>
            <label>Email: </label>
            <input type="text" name="Model.email" id="email"/>        
        </div>
        <div>
            <label>Mo ta: </label>
            <textarea name="Model.moTa" form="form-dang-nhap" maxlength=300></textarea>
        </div>
        <input type="submit"/>
    </form>
</div>
